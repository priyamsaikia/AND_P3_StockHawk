<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_widget"
    android:background="@color/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|left|center_vertical"
        android:padding="@dimen/baseSmallerPadding" />


    <TextView
        android:id="@+id/tv_bidprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|right|center_vertical"
        android:paddingBottom="@dimen/baseSmallerPadding"
        android:paddingTop="@dimen/baseSmallerPadding" />

    <ImageView
        android:id="@+id/imv_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/baseSmallerPadding" />
</LinearLayout>