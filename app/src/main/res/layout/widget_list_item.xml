<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_main"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_up_or_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_green" />

    <TextView
        android:id="@+id/stock_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|left|center_vertical"
        android:padding="@dimen/basePadding"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/body"
        tools:text="GOOG" />

    <TextView
        android:id="@+id/widget_bid_price"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|right|center_vertical"
        android:layout_marginLeft="@dimen/doubleBasePadding"
        android:layout_marginStart="@dimen/doubleBasePadding" />

</LinearLayout>